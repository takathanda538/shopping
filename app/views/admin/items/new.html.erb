
<%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name%>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id,@genres, :id, :name, include_blank: "--選択してください--"%>
  <%= f.label :introduction %>
  <%= f.text_area :introduction%>
  <%= f.label :price %>
  <%= f.text_field :price, placeholder: "1000" %>円
  <%= f.label :is_active %>
  <%= f.check_box :is_active %>
  <%= f.submit "登録" %>
<% end %>