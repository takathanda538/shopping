<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

<% form_with model:@item do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name%>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id %>
  <%= f.label :introduction %>
  <%= f.text_area :introduction%>
  <%= f.label :price %>
  <%= f.text_field :price, placeholder: "1000" %>円
  <%= f.label :is_active %>
  <%= f.text_field :is_active %>
  <%= f.submit "登録" %>
<% end %>