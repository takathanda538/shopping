<div class="container">
  <div class="row justify-content-center ">
    <div class="col-4">
      
    
    <h2>新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
       
      <div class="field">
        <%= f.label :性 %><br />
        <%= f.text_field :last_name, size: "16" %>
      </div>
      <div class="field">
        <%= f.label :名 %><br />
        <%= f.text_field :first_name, size: "16" %>
      </div>
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, size: "16", placeholder: "ハイフンなし" %>
      </div>
      <div class="field">
        <%= f.label :都道府県 %><br />
        <%= f.select :prefectur, Customer.prefecturs.keys, {} %>
      </div>
      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, size: "50" %>
      </div>
      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.text_field :phone_number, size: "22", placeholder: "ハイフンなし" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password", size: "16", placeholder: "6文字" %>
      </div>
    
      <div class="field">
        <%= f.label :確認パスワード%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "16", placeholder: "6文字" %>
      </div>
    
      <div class="actions">
        <%= f.submit "登録", class: "register"%>
      </div>
    <% end %>
    
    <%= render "public/shared/links" %>
      
    </div>
  </div>
</div>
